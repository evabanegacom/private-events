<%= form_for @events do |f| %>
  <%= f.label :event %>
  <%= f.text_field :event, placeholder: 'name of event'%><br>
  <%= f.label :description %>
  <%= f.text_field :description, placeholder: 'description'%><br>
  <%= f.label :date %>
  <%= f.text_field :event_date, :value => (f.object.event_date.strftime('%m/%d/%Y') if f.object.event_date), :size => "20", placeholder: 'time of event' %><br>
  <%= f.submit 'submit'%>
<% end %>